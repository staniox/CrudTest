@model IEnumerable<CrudTest.Models.Telefone>

@{
    ViewData["Title"] = "Index";
}

<h1>Telefones</h1>

<p>
    <a asp-action="Create">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroTelefone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Situacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroTelefone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Situacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TelefoneId">Editar</a>
                <a asp-action="Details" asp-route-id="@item.TelefoneId">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.TelefoneId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
